.news-detail .header {
  padding: 24rpx 32rpx;
  box-sizing: border-box;
}
.news-detail .header .title {
    font-size: 36rpx;
    color: #113260;
    box-sizing: border-box;
    padding-bottom: 24rpx;
    line-height: 60rpx;
    box-sizing: border-box;
}
.news-detail .header .title .hot {
      font-size: 22rpx;
      color: #FFFFFF;
      background-color: #FF4049;
      border-radius: 4px;
      width: 52rpx;
      height: 30rpx;
      text-align: center;
      display: inline-block;
      line-height: 34rpx;
      margin-right: 16rpx;
}
.news-detail .header .desc {
    box-sizing: border-box;
    padding-top: 33rpx;
    font-size: 28rpx;
    color: #65799B;
    font-weight: Regular;
}
.news-detail .header .desc .time {
      margin-left: 40rpx;
}
.news-detail .summary {
  padding: 4rpx 48rpx 35rpx 48rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #162231;
  line-height: 56rpx;
  text-align: justify;
}
.news-detail .summary .news-item {
    margin-bottom: 24rpx;
}
.news-detail .note-info {
  padding: 0 48rpx 35rpx 48rpx;
  box-sizing: border-box;
  color: #fe7125;
  font-size: 24rpx;
  text-align: justify;
  line-height: 38rpx;
}

