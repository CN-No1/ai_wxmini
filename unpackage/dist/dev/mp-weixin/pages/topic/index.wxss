.topic-page .top-header {
  width: 100%;
  background-size: cover;
  background-repeat: no-repeat;
  padding: 32rpx 50rpx;
}
.topic-page .top-header .name {
    font-size: 36rpx;
    color: #3C3F50;
    font-weight: Medium;
    font-family: PingFangSC-Medium, PingFang SC;
    margin-bottom: 22rpx;
}
.topic-page .top-header .desc {
    color: #113260;
    font-size: 30rpx;
    line-height: 42rpx;
    font-family: PingFang-SC-Regular, PingFang-SC;
    margin-bottom: 51rpx;
}
.topic-page .top-header .title {
    width: 650rpx;
    background: -webkit-linear-gradient(right, #00a8f0 0%, #0078f0 100%);
