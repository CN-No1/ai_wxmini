.abilities .banner {
  width: 750rpx;
  height: 300rpx;
}
.abilities .abilities-list {
  min-height: 1460rpx;
  background: #f6f7fa;
  height: 100%;
  padding-bottom: 10rpx;
}
.abilities .abilities-list .abilities-wrapper .title {
  padding: 46rpx 0 0 40rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 700;
  color: #1a1e30;
  line-height: 50rpx;
}
.abilities .abilities-list .abilities-wrapper .abilities-wrapper-inner {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding-top: 24rpx;
  padding-left: 30rpx;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.abilities .abilities-list .abilities-wrapper .abilities-wrapper-inner .abilities-item {
  width: 205rpx;
  height: 240rpx;
  background: #ffffff;
  box-shadow: 0rpx 6rpx 11rpx 0rpx #e7eeff;
  border-radius: 8rpx;
  padding: 48rpx 32rpx 32rpx 32rpx;
  margin-bottom: 24rpx;
  text-align: center;
}
.abilities .abilities-list .abilities-wrapper .abilities-wrapper-inner .abilities-item:not(:nth-child(3n)) {
  margin-right: 38rpx;
}
.abilities .abilities-list .abilities-wrapper .abilities-wrapper-inner .abilities-item .abilities-icon {
  width: 56rpx;
  height: 56rpx;
  margin-bottom: 24rpx;
}
.abilities .abilities-list .abilities-wrapper .abilities-wrapper-inner .abilities-item .abilities-name {
  font-family: PingFangSC-Medium, PingFang SC;
  font-size: 28rpx;
  font-weight: 700;
  color: #1a1e30;
  line-height: 40rpx;
}
input::-webkit-input-placeholder {
  color: #2F7EF9;
  font-size: 16px;
}

